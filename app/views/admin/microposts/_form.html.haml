= form_for @admin_micropost do |f|
  - if @admin_micropost.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_micropost.errors.count, "error")} prohibited this admin_micropost from being saved:"
      %ul
        - @admin_micropost.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
