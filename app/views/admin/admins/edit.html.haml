- provide(:title, "Edit admin")
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = form_for(@admin_admin) do |f|
      = render 'admin/share/error_messages'
      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :email
      = f.email_field :email, class: 'form-control'
      = f.label :password
      = f.password_field :password, class: 'form-control'
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation, class: 'form-control'
      = f.submit "Save changes", class: "btn btn-primary"
    .gravatar_edit
      = gravatar_for @admin_admin
      %a{:href => "http://gravatar.com/emails", :target => "_blank"} change

= link_to 'Show', @admin_admin
\|
= link_to 'Back', admin_admins_path
